<mvc:View 
controllerName="treinamento.l4e.app.controller.Menu" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns="sap.m">

    <Page showHeader="true" title="Menu" titleAlignment="Center" >
        <content>
            <VBox width="100%">
                <Image src="images/Sap_logo.png" width="100%" height="100%"/>
                <List>
                    <items>
                        <StandardListItem title="Cadastro de Plataforma" type="Active" press="onNavCadastroPlataforma"/>
                        <StandardListItem title="Consulta de Plataforma" type="Active" press="onNavConsultaPlataforma"/>
                    </items>
                </List>
            </VBox>
        </content>
    </Page>
</mvc:View>