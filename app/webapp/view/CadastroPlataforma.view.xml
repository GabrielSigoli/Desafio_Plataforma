<mvc:View xmlns:core="sap.ui.core" 
controllerName="treinamento.l4e.app.controller.CadastroPlataforma" 
xmlns:form="sap.ui.layout.form" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns="sap.m">
    <!-- form pode ser qualquer nome Já o Form, é a bíblioteca -->
    <Page showHeader="true" title="Cadastro de Plataforma" titleAlignment="Center">
        <content>
            <form:Form >
                <form:title>
                    <core:Title text="Preencha os campos necessários" level="H6" ></core:Title>
                </form:title>
                <form:layout><!-- Trabalha com a responsividade -->
                    <form:ColumnLayout columnsL="3" columnsM="2" columnsXL="4"></form:ColumnLayout><!-- Divide em colunas columnsL=Tela Grande columnsM=Tela Media columnsXL=Tela Extra Grande -->
                </form:layout>
                <form:formContainers>  <!-- Onde fica as entradas e elementos de tela -->
                    <form:FormContainer >
                        <form:formElements><!--São os inputs e elementos de tela como Label-->
                            <form:FormElement >
                                <form:label><!-- Campo de instruções Tipo -->
                                    <Label text="Nome" design="Bold"></Label>
                                </form:label>
                                <form:fields><!-- São inputs -->
                                    <Input value="{Plataforma>/nome}"></Input><!-- Campo de entrada inserir nome -->
                                </form:fields>
                            </form:FormElement>

                            <form:FormElement >
                                <form:label>
                                    <Label text="Tipo" design="Bold"></Label>
                                </form:label>
                                <form:fields>
                                    <ComboBox selectedKey="{Plataforma>/tipo}"><!-- ComboBox é uma lista de opções do Tipo rolagem.  -->
                                        <items><!-- São as opções da lista do ComboBox -->
                                            <core:Item key="Plataforma JAVA" text="Plataforma JAVA" />
                                            <core:Item key="Plataforma.NET" text="Plataforma.NET" />
                                            <core:Item key="Plataforma KDE" text="Plataforma KDE" />
                                            <core:Item key="Plataforma em Nuvem" text="Plataforma em Nuvem" />
                                            <core:Item key="Sistema de Software" text="Sistema de Software" />
                                            <core:Item key="Windows" text="Windows" />
                                            <core:Item key="Open Source" text="Open Source" />
                                        </items>
                                    </ComboBox>
                                </form:fields>
                            </form:FormElement>

                             <form:FormElement >
                                <form:label>
                                    <Label text="Status" design="Bold"></Label>
                                </form:label>
                                <form:fields><!-- São inputs -->
                                    <Switch type="AcceptReject" change="onChangeSwitch" state="{= ${Plataforma>/status} === 'A' ? true : false}"></Switch><!-- Switch é o elemento de status tipo chave. AcceptReject muda a cor -->
                                </form:fields>
                            </form:FormElement>
                        
                        </form:formElements>
                    </form:FormContainer>
                
                </form:formContainers> 
            </form:Form>
        </content>
        <footer>
            <OverflowToolbar ><!-- Barra branca do footer -->
                <Button text="Confirmar" type="Emphasized" press="onConfirmar"/><!-- Botão confirmar, Emphasized destaca o botão -->
                <Button id="Cancel" text="Cancelar" type="Reject" press="onCancelar"/> <!-- Botão cancelar, Reject fica vermelho -->
                <ToolbarSpacer/><!-- É o espaço(Margem) na barra do footer -->
            </OverflowToolbar>
        </footer>
    </Page>
		
</mvc:View>