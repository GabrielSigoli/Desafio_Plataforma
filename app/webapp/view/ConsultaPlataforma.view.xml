<mvc:View 
controllerName="treinamento.l4e.app.controller.ConsultaPlataforma" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns="sap.m">
	<Page showHeader="true" title="Consulta de Plataforma" titleAlignment="Center"> <!-- Aligment = alinhamento  -->
        <content>
            <Table mode="Delete" id="tablePlataforma" delete="onExcluir" items="{path: 'Plataforma>/'}"><!-- mode="Delete" - icone X   ">/" usado para acessar -->
                <headerToolbar> <!-- Cabeçalho da Tabela -->
                    <OverflowToolbar ><!-- Rodapé da Tabela -->
                        <content><!-- Corpo do header -->
                            <Title text="Plataforma" level="H2" />
                            <ToolbarSpacer ></ToolbarSpacer><!-- Espaço(Margem) -->
                            <SearchField placeholder="Digite o nome da plataforma" width="50%" liveChange="onSearch" ></SearchField><!-- Aba de pesquisa -->
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns><!-- Header da tabela -->
                    <Column demandPopin="true" minScreenWidth="Desktop"><!-- Coluna ID-->
                        <Label wrapping="true" text="ID" design="Bold"></Label>
                    </Column>
                    <Column demandPopin="true" minScreenWidth="Desktop"><!-- Coluna NOME-->
                        <Label wrapping="true" text="Nome" design="Bold"></Label>
                    </Column>
                    <Column demandPopin="true" minScreenWidth="Desktop"><!-- Coluna TIPO-->
                        <Label wrapping="true" text="Tipo" design="Bold"></Label>
                    </Column>
                    <Column demandPopin="true" minScreenWidth="Desktop"><!-- Coluna DATA DA CRIAÇÃO-->
                        <Label wrapping="true" text="Data de Criação" design="Bold"></Label>
                    </Column>
                    <Column demandPopin="true" minScreenWidth="Desktop"><!-- Coluna DATA DA ATUALIZAÇÃO-->
                        <Label wrapping="true" text="Data de Atualização" design="Bold"></Label>
                    </Column>
                    <Column demandPopin="true" minScreenWidth="Desktop"><!-- Coluna STATUS-->
                        <Label wrapping="true" text="Status" design="Bold"></Label>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Detail" detailPress="onNavEditarPlataforma"> <!-- São os dados apresentados na tabela -->
                        <cells><!-- Chamadas-->
                            <Text text="{Plataforma>id}"></Text><!-- Chamada do campo ID da api-cadastral-->
                            <Text text="{Plataforma>nome}"></Text>
                            <Text text="{Plataforma>tipo}"></Text>
                            <Text text="{Plataforma>criado}"></Text>
                            <Text text="{Plataforma>atualizado}"></Text>
                            <ObjectStatus text="{= ${Plataforma>status} === 'A' ? 'Ativo' : 'Inativo'}" inverted="true" state="{= ${Plataforma>status} === 'A' ? 'Success' : 'Error'}"></ObjectStatus> <!-- "?" Significa se for verdade -->
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>